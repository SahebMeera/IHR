@inherits AddEditManageLeaveBase
@if (ShowDialog)
{
    <div class="modal fade show d-block" id="exampleModal" tabindex="-1" role="dialog">
        <div class="modal-dialog modal-dialog-centered" role="document" style="max-width: 900px;">
            <div class="modal-content">
                <div class="modal-header">
                    <span class="float-left pl-2">Manage Leave</span>
                    <button type="button" class="btn-close close-modal close pr-4" @onclick="@Close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">×</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-12 pl-0 pr-0">
                            <EditForm Model="@LeaveBalance" OnValidSubmit="SaveLeaveBalance">
                                <DataAnnotationsValidator />
                                <div asp-validation-summary="All" class="text-danger"></div>
                                <div class="row no-gutters">
                                    <div class="col-sm-12">
                                        <div class="form-group row align-items-baseline">
                                            <div class="col-sm-6 display-flex">
                                                <label class="control-label col-sm-4 col-form-label">Employee Name</label>
                                                <div class="col-sm-8 pl-0">
                                                    <InputText class="form-control form-control-sm" disabled="true" @bind-Value="LeaveBalance.EmployeeName" />
                                                </div>
                                            </div>
                                            <div class="col-sm-6 display-flex">
                                                <label class="control-label col-sm-4 col-form-label">Leave Year</label>
                                                <div class="col-sm-8 pl-0">
                                                    <InputNumber class="form-control form-control-sm" disabled="true" @bind-Value="LeaveBalance.LeaveYear" />
                                                </div>
                                            </div>

                                        </div>
                                    </div>
                                    <div class="col-sm-12">
                                        <div class="form-group row align-items-baseline">
                                            <div class="col-sm-6 display-flex">
                                                <label class="control-label col-sm-4 col-form-label">Leave Type</label>
                                                <div class="col-sm-8 pl-0">
                                                    <InputText class="form-control form-control-sm" disabled="true" @bind-Value="LeaveBalance.LeaveType" @onblur="onTotalChange" />

                                                </div>
                                            </div>
                                            <div class="col-sm-6 display-flex">
                                                <label class="control-label col-sm-4 col-form-label">Total</label>
                                                <div class="col-sm-8 pl-0">
                                                    <InputNumber class="form-control form-control-sm" @bind-Value="LeaveBalance.VacationTotal" @onblur="onTotalChange" />

                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-sm-12">
                                        <div class="form-group row align-items-baseline">
                                            <div class="col-sm-6 display-flex">
                                                <label class="control-label col-sm-4 col-form-label">Used</label>
                                                <div class="col-sm-8 pl-0">
                                                    <InputNumber class="form-control form-control-sm" disabled="true" @bind-Value="LeaveBalance.VacationUsed" />
                                                </div>
                                            </div>
                                            <div class="col-sm-6 display-flex">
                                                <label class="control-label col-sm-4 col-form-label">Unpaid Leave</label>
                                                <div class="col-sm-8 pl-0">
                                                    <InputNumber class="form-control form-control-sm" disabled="true"
                                                                 @bind-Value="LeaveBalance.UnpaidLeave" />
                                                </div>
                                            </div>
                                            <div class="col-sm-6 display-flex">
                                                <label class="control-label col-sm-4 col-form-label">Balance</label>
                                                <div class="col-sm-8 pl-0">
                                                    <InputNumber class="form-control form-control-sm" disabled="true" @bind-Value="LeaveBalance.VacationBalance" />
                                                </div>
                                            </div>
                                            <div class="col-sm-6 display-flex">
                                                <label class="control-label col-sm-4 col-form-label">Encash</label>
                                                <div class="col-sm-8 pl-0">
                                                    <InputNumber class="form-control form-control-sm" @bind-Value="LeaveBalance.EncashedLeave" />
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group pr-3 pt-2 d-flex justify-content-end">
                                    <button type="submit" class="btn btn-primary btn-width-height" disabled="@isSaveButtonDisabled">Save</button>
                                    <button type="button" class="btn btn-danger btn-width-height ml-1" @onclick="Cancel">Cancel</button>
                                </div>
                            </EditForm>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}