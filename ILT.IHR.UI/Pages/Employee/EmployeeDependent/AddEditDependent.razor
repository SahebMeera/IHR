@inherits AddEditDependentBase
@if (ShowDialog)
{
    <div class="modal fade show d-block" id="exampleModal" tabindex="-1" role="dialog">
        <div class="modal-dialog modal-dialog-centered" role="document" style="max-width: 800px;">
            <div class="modal-content">
                <div class="modal-header">
                    <span class="float-left pl-2">@Title Dependent</span>
                    <button type="button" class="btn-close close-modal close pr-4" @onclick="@Close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">×</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-12 pl-0 pr-0 mobile-pad-right-add">
                            <EditForm Model="@Dependent" OnValidSubmit="SaveDependent">
                                <DataAnnotationsValidator />
                                <div asp-validation-summary="All" class="text-danger"></div>
                                <div class="row no-gutters">
                                    <div class="col-sm-12 pr-0 pl-0 mobile-pad-right-add">
                                        <div class="form-group row align-items-baseline">
                                            <div class="col-sm-6 pr-0 display-flex">
                                                <label class="control-label col-sm-4 col-form-label">* First Name</label>
                                                <div class="col-sm-8 pl-0 pr-0">
                                                    <InputText class="form-control form-control-sm autofocus" @bind-Value="Dependent.FirstName" maxlength="50" />
                                                </div>
                                            </div>
                                            <div class="col-sm-6 display-flex remove-padding-right">
                                                <label class="control-label col-sm-4 col-form-label">* Last Name</label>
                                                <div class="col-sm-8 pl-0 remove-padding-right">
                                                    <InputText class="form-control form-control-sm" @bind-Value="Dependent.LastName" maxlength="50"/>
                                                </div>
                                            </div>

                                        </div>
                                    </div>
                                    <div class="col-sm-12 pr-0 pl-0 mobile-pad-right-add">
                                        <div class="form-group row align-items-baseline">
                                            <div class="col-sm-6 pr-0 display-flex">
                                                <label class="control-label col-sm-4 col-form-label">Middle Name</label>
                                                <div class="col-sm-8 pl-0 pr-0">
                                                    <InputText class="form-control form-control-sm" @bind-Value="Dependent.MiddleName" maxlength="50" />
                                                </div>
                                            </div>
                                            <div class="col-sm-6 display-flex remove-padding-right">
                                                <label class="control-label col-sm-4 col-form-label">Birth Date</label>
                                                <div class="col-sm-8 pl-0 remove-padding-right">
                                                    <InputDate class="form-control form-control-sm" max="9999-12-31" @bind-Value="Dependent.BirthDate" />
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-sm-12 pr-0 pl-0 mobile-pad-right-add">
                                        <div class="form-group row align-items-baseline">
                                          
                                            <div class="col-sm-6 pr-0 display-flex">
                                                <label class="control-label col-sm-4 pr-2 mb-0 text-right nowrap-white-space">* Relation</label>
                                                <div class="col-sm-8 pl-0 pr-0">
                                                    <CustomInputSelect class="form-control form-control-sm" @bind-Value="Dependent.RelationID" @oninput="onRelationChange">
                                                        <option value='0'>select</option>
                                                        @if (RelationList != null)
                                                            {

                                                            @foreach (var invoicingPeriod in RelationList)
                                                                {
                                                                <option value="@invoicingPeriod.ListValueID">@invoicingPeriod.ValueDesc</option>
                                                                }
                                                            }
                                                        /**/
                                                    </CustomInputSelect>
                                                </div>
                                            </div>
                                            <div class="col-sm-6 display-flex remove-padding-right">
                                                <label class="control-label col-sm-4 pr-2 mb-0 text-right nowrap-white-space">* Visa Type</label>
                                                <div class="col-sm-8 pl-0 remove-padding-right">
                                                    <CustomInputSelect class="form-control form-control-sm" @bind-Value="Dependent.VisaTypeID" @oninput="onVisaTypeChange">
                                                        <option value='0'>select</option>
                                                        @if (VisaTypeList != null)
                                                            {

                                                            @foreach (var VisaType in VisaTypeList)
                                                                {
                                                                <option value="@VisaType.ListValueID">@VisaType.ValueDesc</option>
                                                                }
                                                            }
                                                        /**/
                                                    </CustomInputSelect>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                 
                                    @*<div class="col-sm-12 pr-0 pl-0">
                                        <div class="form-group row align-items-baseline">
                                            <div class="col-sm-6 pr-0 display-flex">
                                                <label class="control-label col-sm-4 pr-2 mb-0 text-right nowrap-white-space">City</label>
                                                <div class="col-sm-8 pl-0 pr-0">
                                                    <InputText class="form-control form-control-sm" @bind-Value="company.City" />
                                                </div>
                                            </div>
                                            <div class="col-sm-6 display-flex">
                                                <label class="control-label col-sm-4 pr-2 mb-0 text-right nowrap-white-space">State</label>
                                                <div class="col-sm-8 pl-0">
                                                    <InputText class="form-control form-control-sm" @bind-Value="company.State" />
                                                </div>
                                            </div>
                                        </div>
                                    </div>*@
                                </div>
                                <div class="form-group pr-3 pt-2 d-flex justify-content-end remove-padding-right">
                                    @if (isShow)
                                    {
                                        @*<button type="submit" class="btn btn-primary" disabled="@(!context.Validate() || !context.IsModified())">Save</button>*@
                                        <button type="submit" class="btn btn-primary btn-width-height" disabled="@isSaveButtonDisabled">Save</button>
                                    }
                                    <button type="button" class="btn btn-danger btn-width-height ml-1" @onclick="Cancel">Cancel</button>
                                </div>
                            </EditForm>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}