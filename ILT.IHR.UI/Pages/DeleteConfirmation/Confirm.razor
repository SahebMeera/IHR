@inherits ConfirmBase;

@if (ShowConfirmation)
{
    <div class="modal fade show d-block" id="exampleModal" tabindex="-1" role="dialog">
        <div class="modal-dialog confirm-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title delete-title" id="exampleModalLabel">@ConfirmationTitle</h5>
                    <button type="button" class="close delete-close" data-dismiss="modal" aria-label="Close"
                            @onclick="() => OnConfirmationChange(false)">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    @ConfirmationMessage
                </div>
                <div class="modal-footer">                    
                    <button type="button" disabled="@disabled" class="btn @(buttonType.ToLower() == "delete"  ? "btn-danger btn-width-height" : "btn-primary btn-width-height")"
                            @onclick="() => OnConfirmationChange(true)">
                        @buttonType
                    </button>
                    <button type="button" class="btn btn-secondary btn-width-height" data-dismiss="modal"
                            @onclick="() => OnConfirmationChange(false)">
                        Cancel
                    </button>
                </div>
            </div>
        </div>
    </div>
}
